<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="{i18n>ExD_NoDataText}"
		title="{i18n>ExD_Title}"
		search="handleExtensionsSearch"
		confirm="handleExtensionsDialogConfirm"
		resizable="true"
		items="{
			path: 'serviceUnitCombos>/extensions/d/results',
            sorter: {
                path: 'Name'
            }
		}">
		<ColumnListItem selected="{serviceUnitCombos>Extension/Selected}">
			<Text text="{serviceUnitCombos>Extension/Name}" />
			<Text text="{serviceUnitCombos>Extension/Version}" />
			<Text text="{serviceUnitCombos>Extension/Vendor}" />
			<Text text="{serviceUnitCombos>Extension/Type}" />
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>ExD_ColumnName}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>ExD_ColumnVersion}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>ExD_ColumnProvider}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>ExD_ColumnType}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>