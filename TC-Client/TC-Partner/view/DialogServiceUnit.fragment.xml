<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="{i18n>SUD_NoDataText}"
		title="{i18n>SUD_Title}"
		search="handleServiceUnitsSearch"
		confirm="handleServiceUnitsDialogConfirm"
		items="{
			path: 'PartnerCombos>/serviceunits/d/results',
            sorter: {
                path: 'Name'
            }
		}">
		<ColumnListItem>
			<Text text="{PartnerCombos>Name}" />
			<Text text="{PartnerCombos>Purpose}" />
			<Text text="{PartnerCombos>Version}" />
			<Text text="{PartnerCombos>Status}" />
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>SUD_ColumnName}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>SUD_ColumnPurpose}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>SUD_ColumnVersion}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>SUD_ColumnStatus}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>